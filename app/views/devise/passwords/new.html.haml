-content_for :title do
  ="Reset Password"

-content_for :header do
  =render 'shared/general_header' 

-content_for :single_panel do
  .pitch
    .title
      Don't know your password?
    .text
      No problem! Just enter your email in the field below and we will help you to get a bright new password.
    =form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      =f.label :email, "Email"
      %br
      =f.text_field :email
      =f.submit "Send me instructions", :class=>"button important"